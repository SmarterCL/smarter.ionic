{
  "name": "ionic-supabase-mcp-template",
  "version": "1.0.0",
  "description": "A comprehensive Ionic Angular template with Supabase and MCP integration",
  "author": "SmarterOS",
  "homepage": "https://smarteros.com",
  "scripts": {
    "ng": "ng",
    "start": "ionic serve",
    "build": "ionic build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "android": "ionic capacitor run android",
    "ios": "ionic capacitor run ios",
    "prepare": "husky install"
  },
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@capacitor/camera": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@ionic/angular": "^7.0.0",
    "@ionic/pwa-elements": "^3.0.0",
    "@supabase/supabase-js": "^2.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@capacitor/cli": "^5.0.0",
    "@ionic/angular-toolkit": "^9.0.0",
    "@types/node": "^18.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.8.0",
    "typescript": "~5.2.0"
  },
  "ionic": {
    "name": "SmarterOS Template",
    "integrations": {
      "capacitor": {}
    },
    "type": "angular",
    "proxies": []
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-ionic": {}
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{ts,html,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}