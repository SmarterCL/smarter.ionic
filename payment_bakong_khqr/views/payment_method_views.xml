<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_pos_payment_method_form" model="ir.ui.view">
        <field name="name">pos.payment.method.form.bakong</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_payment_method_form"/>
        <field name="arch" type="xml">
            <field name="is_cash" position="after">
                <field name="is_bakong_qr" string="Bakong QR"/>
                <field name="bakong_api_key" placeholder="API Key" attrs="{'invisible': [('is_bakong_qr','=',False)]"/>
                <field name="bakong_merchant_id" placeholder="Merchant ID" attrs="{'invisible': [('is_bakong_qr','=',False)]"/>
            </field>
        </field>
    </record>
</odoo>
